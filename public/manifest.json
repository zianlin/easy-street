{
  "manifest_version": 3,
  "name": "Easy Street â€” Find Your Grails, Save Cash",
  "version": "0.0.16",
  "description": "Find the internet's best deals on sneakers and menswear.",
  "icons": {
    "16": "16x16.png",
    "32": "32x32.png",
    "48": "48x48.png",
    "128": "128x128.png"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "static/js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["static/js/content.js"]
    }
  ],
  "action": {
      "default_popup": "index.html" 
  },
  "host_permissions": ["<all_urls>", "*://*.mixpanel.com/*", "*://*.google.com/*", "https://grailed.com/*", "https://ebay.com/*", "https://www.johnelliott.com/*", "https://stockx.com/*", "https://www.depop.com/*"],
  "content_security_policy": {
    "script-src": "self",
    "object-src": "self"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "easystreet_filter.png",
        "hover-button.png",
        "ES.png",
        "cross.png",
        "logo.png",
        "loader.gif",
        "Righteous-Regular.tff",
        "16x16.png",
        "32x32.png",
        "48x48.png",
        "128x128.png",
        "192x192.png",
        "512x512.png",
        "src/popup/popup.css",
        "noimage.jpg"
      ],
      "matches": ["<all_urls>", "http://*/*", "https://*/*"]
    }
  ]
}
